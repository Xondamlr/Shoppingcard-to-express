<div class="row">
    <div class="col s6  offset-s3">
        <div class="card">
            <div class="card-image">
                <img src={{product.img}} alt={{product.img}}>
                <span class="card-title" style="color: black;">{{product.name}}</span>
            </div>
            <div class="card-content">
                <p>{{product.price}}</p>
            </div>
            <div class="card-action">
                <a class="btn btn-danger" href="/api/products/remove/{{product.id}}" style="background: red;">Delete</a>

                <a class="btn btn-success" href="/api/products/update/{{product.id}}" style="background: green;">Update</a>
            </div>
        </div>
    </div>
</div>