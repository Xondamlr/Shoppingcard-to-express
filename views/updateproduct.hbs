<form action="/api/products/update" method="post">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="Book name" value="{{oldProduct.name}}">
    <br><br>
    <label for="img">Img</label>
    <input type="text" name="img" id="img" placeholder="Book img" value="{{oldProduct.img}}">
    <input type="hidden" name="id" id="id" value="{{oldProduct.id}}">
    <br><br>
    <label for="price">Price</label>
    <input type="number" name="price" id="price" placeholder="Book price" value="{{oldProduct.price}}">
    <input type="submit">
</form>